<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="28dp">

    <GridLayout
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:columnCount="3"
        android:rowCount="3">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="0"
            app:srcCompat="@drawable/person1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="2"
            app:srcCompat="@drawable/person3" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="1"
            app:srcCompat="@drawable/person2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="1"
            android:gravity="center_vertical|center_horizontal"
            android:scaleType="center"
            app:srcCompat="@drawable/redcross_small" />

    </GridLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_row="1"
        android:layout_column="0"
        android:text="3 responders are coming"
        android:textSize="25sp"
        android:padding="28dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_row="2"
        android:layout_column="0"
        android:text="estimated time 5 minutes"
        android:textSize="25sp"
        android:padding="35dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:gravity="center_vertical|center_horizontal"
        android:padding="28dp"
        android:text="They are here!"
        app:cornerRadius="20dp" />


</GridLayout>